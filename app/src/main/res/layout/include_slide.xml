<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y150"
    android:background="@drawable/home_pager_backgroud">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_slide_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:background="@drawable/home_pager_backgroud">

            <com.dong.circleimageview.widget.CircleImageView
                android:id="@+id/main_slide_photo_circleImageView"
                android:layout_width="@dimen/y50"
                android:layout_height="@dimen/y50"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x15"
                android:transitionName="share photo img" />

            <TextView
                android:id="@+id/main_slide_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y3"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/main_slide_photo_circleImageView"
                android:textSize="@dimen/x15"
                android:textStyle="bold"
                android:transitionName="share photo tv" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"></View>

        <LinearLayout
            android:id="@+id/main_slide_like"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y5"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x15"
            android:paddingTop="@dimen/y5">

            <ImageView
                android:layout_width="@dimen/y16"
                android:layout_height="@dimen/y16"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_tab_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我的收藏"
                android:textSize="@dimen/x14" />

            <ImageView
                android:layout_width="@dimen/y8"
                android:layout_height="@dimen/y8"
                android:layout_gravity="center_vertical"
                android:src="@drawable/look_more_ico" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"></View>

        <LinearLayout
            android:id="@+id/main_slide_change_paassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y5"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x15"
            android:paddingTop="@dimen/y5">

            <ImageView
                android:layout_width="@dimen/y16"
                android:layout_height="@dimen/y16"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_tab_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textSize="@dimen/x14" />

            <ImageView
                android:layout_width="@dimen/y8"
                android:layout_height="@dimen/y8"
                android:layout_gravity="center_vertical"
                android:src="@drawable/look_more_ico" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"></View>

        <LinearLayout
            android:id="@+id/main_slide_user_return"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y5"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x15"
            android:paddingTop="@dimen/y5">

            <ImageView
                android:layout_width="@dimen/y16"
                android:layout_height="@dimen/y16"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_tab_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="用户反馈"
                android:textSize="@dimen/x14" />

            <ImageView
                android:layout_width="@dimen/y8"
                android:layout_height="@dimen/y8"
                android:layout_gravity="center_vertical"
                android:src="@drawable/look_more_ico" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"></View>

        <LinearLayout
            android:id="@+id/main_slide_check_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y5"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x15"
            android:paddingTop="@dimen/y5">

            <ImageView
                android:layout_width="@dimen/y16"
                android:layout_height="@dimen/y16"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_tab_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="检查更新"
                android:textSize="@dimen/x14" />

            <ImageView
                android:layout_width="@dimen/y8"
                android:layout_height="@dimen/y8"
                android:layout_gravity="center_vertical"
                android:src="@drawable/look_more_ico" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"></View>

    </LinearLayout>
</merge>
