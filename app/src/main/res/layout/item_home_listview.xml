<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/x3"
    app:cardCornerRadius="@dimen/x5"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="0px">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="0px"
        app:cardCornerRadius="@dimen/x5"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="0px">

        <ImageView
            android:id="@+id/home_listview_img"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y60"
            android:scaleType="centerCrop"/>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginTop="@dimen/x5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_listview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:singleLine="true"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/home_listview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:singleLine="true"
            android:layout_marginTop="@dimen/y12"
            android:textSize="@dimen/x12" />
    </LinearLayout>

</android.support.v7.widget.CardView>