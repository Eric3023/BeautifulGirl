<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dong.beautifulgirl.modular.logicandsignmodular.LogicAndSignActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logicandsign_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/logic_backgroud"
        android:transitionName="share logic background"/>

    <LinearLayout
        android:id="@+id/logicandsign_logic_btn"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/y24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y300"
        android:clickable="true"
        android:padding="0px"
        android:orientation="vertical"
        android:background="@drawable/logic_sign_btn_focus"
        android:gravity="center">


        <TextView
            android:id="@+id/logicandsign_logic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:clickable="true"
            android:padding="0px"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x16"
            android:transitionName="share logic txt"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/logicandsign_sign_btn"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/y24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y336"
        android:clickable="true"
        android:padding="0px"
        android:orientation="vertical"
        android:background="@drawable/logic_sign_btn_not_focus"
        android:gravity="center">


        <TextView
            android:id="@+id/logicandsign_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:clickable="true"
            android:padding="0px"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x16"/>

    </LinearLayout>


</RelativeLayout>
