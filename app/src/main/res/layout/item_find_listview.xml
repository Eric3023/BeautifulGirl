<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/x5"
    app:cardCornerRadius="@dimen/x5"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="0px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.dong.beautifulgirl.widget.RoundImageView
            android:id="@+id/find_listview_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y5"
            android:padding="@dimen/x10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/find_listview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="@dimen/x12"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/find_listview_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginTop="@dimen/y5"
                android:textSize="@dimen/x10"
                android:visibility="gone"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>